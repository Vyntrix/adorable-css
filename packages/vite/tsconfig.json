{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "strict": false
  },
  "externals": ["vite"],
  // ts-node로 cli.ts를 바로 실행할 수 있도록 하는 설정
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "commonjs"
    }
  }
}